    <h1>JavaScript Notlari</h1>
    Eger ayni sayfada yazmak istersek; <br>
    <strong>&lt;script>&lt;/script></strong> elementleri arasina yazmaliyiz. <br>
    head icinde olabilecegi gibi sayfa sonundaki <strong>&lt;/body></strong> <br>
    etiketinin hemen üzerine de yerlestirebiliriz. <br><br>

    <strong>var sayi = 3;</strong> seklinde deger atanabilir.
    <strong></strong>




    <script>
        var sayi1 = 3; 
        var sayi2 = 18;
        var sayi = 3;
        alert("toplamlari: "+ (sayi1+sayi2))
        
        var marka;
        marka = opel;
        
        var model=promt("Lütfen model giriniz: "); 
        
        // eger hem datatype hem de deger karsilaritmasi yapilacaksa === kullanilmalidir.
        
        //Konsola yazdirmak icin;
        console.log('arac manuel');
        
        var vites='1';
        
        //if yapisi
        
        if(vites=='1'){
            console.log('arac manuel');
        }else{
            console.log('arac otomatik');
        }
        
        //switch case yapisi
        
        switch(vites){
            case '1':
                console.log('arac manuel');
                break;
            case '2':
                console.log('arac otomatik');
                break;
            default:
                console.log('yanlis deger');
        }
        
        
        //Döngüler
        //For dongusu
        
        for(var i=1; i<=10; i++){
            console.log(i);
        }
        //konsola 1 den 10 a kadar sayilari yazacaktir.
        //eger if (i%2==0){} koysaydik sadece cift sayilari yazacakti.
        
        // dizi yazma
        
        var sehirler = ["kocaeli", "izmir", "balikesir"];
        
        //eger biz bu sehirleri konsolda yazdirmak istersek 
        
        for(var i= 0; i<sehirler.length; i++){
            console.log(sehirler[i]);
        }
        
        //while döngüsü
        
        var i=1;
        while(i<=10){
            console.log(i);
            i++;
        }
        
        //eger sehirleri yazdirmak isteseydik i=0 yapip sarta i<=sehirler.length yazip sehirler[i] konsola yadiracaktik.
        
        //1den 10 a kadar sayilari konsola yadirmis olduk.
        
        
        
        
    </script>

