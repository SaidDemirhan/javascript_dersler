        console.log('arac manuel');
        
        var vites='1';
        
        //if yapisi
        
        if(vites=='1'){
            console.log('arac manuel');
        }else{
            console.log('arac otomatik');
        }
        
        //switch case yapisi
        
        switch(vites){
            case '1':
                console.log('arac manuel');
                break;
            case '2':
                console.log('arac otomatik');
                break;
            default:
                console.log('yanlis deger');
        }
        
        
